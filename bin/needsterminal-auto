#!/usr/bin/env bash

set -eu
shopt -s extglob

case "$1" in
	vim|wiki) set -- needsterminal "$@" ;;
	m|m-*|mutt|mutt-*) set -- needsterminal "$@" ;;
	nomi|nomi-*) set -- needsterminal "$@" ;;
	arbtt*) set -- needsterminal "$@"; export _XTERM_HOLD=: _XTERM_FLOAT=: ;;
	kinit*) set -- needsterminal "$@"; export _XTERM_HOLD=: _XTERM_FLOAT=: ;;
	liskin-slack-status) set -- needsterminal "$@" ;;
esac

exec "$@"
