#!/usr/bin/env bash

set -eu

save_dir=~/.cache/mpd/save
mkdir -p "$save_dir"
profile="${save_dir}/${1:-.current}"
profile="$(readlink -f "$profile")"
[[ "${profile}" ]]
[[ ${1-} || -f "${profile}" ]]

[[ -f "${profile}" ]] && cp "${profile}" "${profile}~"
mpstore >"${profile}"

[[ $profile == */snapshot ]] || ln -sfr "${profile}" "${save_dir}/.current"
