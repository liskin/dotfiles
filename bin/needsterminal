#!/usr/bin/env bash

set -eu

[[ -t 0 && $DISPLAY ]] || _WAIT_FOR_WM=: exec x-terminal-emulator ${_XTERM_HOLD:+-hold} ${_XTERM_FLOAT:+-xrm 'URxvt.transient-for: 0x11111111')} -e "$0" "$@"
[[ ${_WAIT_FOR_WM-} ]] && { xwaitforwindow || :; }
unset _WAIT_FOR_WM _XTERM_HOLD _XTERM_FLOAT

clear
echo -ne "\033]0;$1\007"
exec "$@"
